{
    "compilerOptions": {
        "lib": ["es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "outDir": "dist/",
        "sourceMap": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "@resolvers/*": ["resolvers/*"],
            "@datatypes/*": ["datatypes/*"],
            "@services/*": ["services/*"],
        }
    },
    "include": [
        "src"
    ]
}